# ==============================================================================
# НАСТРОЙКИ ПУТЕЙ (НОВАЯ АРХИТЕКТУРА LINUX)
# ==============================================================================
# Предполагаем, что makefile лежит в src/, а deps в корне проекта
DEPS_PATH=$(CURDIR)/../deps/lin_deps

# Boost
BOOST_INCLUDE_PATH=$(DEPS_PATH)/boost/include
BOOST_LIB_PATH=$(DEPS_PATH)/boost/lib

# Berkeley DB 4.8
BDB_INCLUDE_PATH=$(DEPS_PATH)/db48/include
BDB_LIB_PATH=$(DEPS_PATH)/db48/lib

# OpenSSL
OPENSSL_INCLUDE_PATH=$(DEPS_PATH)/openssl/include
OPENSSL_LIB_PATH=$(DEPS_PATH)/openssl/lib

# MiniUPnPc
# (При копировании мы убрали суффикс версии -1.9, теперь просто miniupnpc)
MINIUPNPC_INCLUDE_PATH=$(DEPS_PATH)/miniupnpc
MINIUPNPC_LIB_PATH=$(DEPS_PATH)/miniupnpc

# ==============================================================================

USE_UPNP:=0
USE_WALLET:=1
USE_LOWMEM:=0

LINK:=$(CXX)
ARCH:=$(shell lscpu | head -n 1 | awk '{print $2}')

DEFS=-DBOOST_SPIRIT_THREADSAFE

# Добавляем пути к заголовкам
DEFS += $(addprefix -I,$(CURDIR) $(CURDIR)/obj $(BOOST_INCLUDE_PATH) $(BDB_INCLUDE_PATH) $(OPENSSL_INCLUDE_PATH))

# Добавляем пути к библиотекам
LIBS = $(addprefix -L,$(BOOST_LIB_PATH) $(BDB_LIB_PATH) $(OPENSSL_LIB_PATH))

# === МАГИЯ СТАТИКИ И ДИНАМИКИ ===
LMODE = dynamic
LMODE2 = dynamic
ifdef STATIC
	LMODE = static
	ifeq (${STATIC}, all)
	    LMODE2 = static
	endif
endif

# Часть 1: Наши библиотеки (Boost, SSL, DB)
LIBS += \
 -Wl,-B$(LMODE)

# ВАЖНО: --start-group и --end-group решают проблему циклической зависимости
LIBS += \
 -Wl,--start-group \
   -l boost_thread$(BOOST_LIB_SUFFIX) \
   -l boost_program_options$(BOOST_LIB_SUFFIX) \
   -l boost_filesystem$(BOOST_LIB_SUFFIX) \
   -l boost_chrono$(BOOST_LIB_SUFFIX) \
   -l boost_system$(BOOST_LIB_SUFFIX) \
   -l db_cxx$(BDB_LIB_SUFFIX) \
   -l ssl \
   -l gmp \
   -l crypto \
 -Wl,--end-group

# Настройка UPnP
ifndef USE_UPNP
	override USE_UPNP = -
endif
ifneq (${USE_UPNP}, -)
	LIBS += -L$(MINIUPNPC_LIB_PATH)
	DEFS += -I$(MINIUPNPC_INCLUDE_PATH)
	LIBS += -l miniupnpc
	DEFS += -DUSE_UPNP=$(USE_UPNP)
endif

ifeq (${USE_LOWMEM}, 1)
	DEFS += -DLOWMEM
endif

# Часть 2: Системные библиотеки (Dynamic) - всегда в конце
LIBS+= \
 -Wl,-Bdynamic \
   -l z \
   -l dl \
   -l pthread


# Hardening flags
	HARDENING=-fno-stack-protector
	HARDENING+=-fstack-protector-all -Wstack-protector
	LDHARDENING+=-Wl,-z,relro -Wl,-z,now
	ifdef PIE
	    HARDENING+=-fPIE
	    LDHARDENING+=-pie
	endif
	HARDENING+=-D_FORTIFY_SOURCE=2

DEBUGFLAGS=-g

ifeq (${ARCH}, i686)
	EXT_OPTIONS=-msse2
endif

xCXXFLAGS=-O2 $(EXT_OPTIONS) -pthread -Wall -Wextra -Wno-ignored-qualifiers -Wformat -Wformat-security -Wno-unused-parameter -Wunused-function -Wunused-variable -fpermissive -Wconversion-null\
	$(DEBUGFLAGS) $(DEFS) $(HARDENING) $(CXXFLAGS)

xLDFLAGS=$(LDHARDENING) $(LDFLAGS)

OBJS= \
