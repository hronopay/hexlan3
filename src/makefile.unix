	obj/key.o \
	obj/pubkey.o \
	obj/ecwrapper.o \
	obj/init.o \
	obj/bitcoind.o \
	obj/keystore.o \
	obj/core.o \
	obj/main.o \
	obj/net.o \
	obj/protocol.o \
	obj/rpcclient.o \
	obj/rpcprotocol.o \
	obj/rpcserver.o \
